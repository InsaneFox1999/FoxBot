{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "label": "Run TSC in watch mode",
            "isBackground": true,
            // automatically run when opened. this way tests don't need to have it as a prelaunch task, because that doesn't seem to work (and this is better anyway)
            "runOptions": {
                "runOn": "folderOpen"
            },
        },
    ],
}
